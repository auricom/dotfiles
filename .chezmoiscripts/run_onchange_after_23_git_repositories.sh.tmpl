{{- if .desktop -}}
#!/usr/bin/env bash

# Git repositories management script
# Clones and configures git repositories
# Hash dependencies: {{ include ".chezmoidata/repositories.yaml" | sha256sum }}

set -euo pipefail

# Source utility functions
source "{{ .chezmoi.homeDir }}/scripts/lib/chezmoi_utils.sh"

main() {
    log_section "Managing git repositories"

    # Clone repositories
    clone_repositories

    # Set up symlinks
    setup_dotfiles_symlink
    setup_agents_symlink
    setup_claude_skills
    setup_claude_md

    log_info "Git repositories setup completed"
}

clone_repositories() {
    log_info "Cloning git repositories"

    {{- range .repositories }}
    git_clone_if_missing \
        "git@github.com:{{ .user }}/{{ .repo }}.git" \
        "{{ $.chezmoi.homeDir }}/repositories/{{ .user }}/{{ .repo }}"
    {{- end }}
}

setup_dotfiles_symlink() {
    local source="{{ .chezmoi.homeDir }}/.local/share/chezmoi"
    local target="{{ .chezmoi.homeDir }}/repositories/auricom/dotfiles"

    create_symlink_if_missing "$source" "$target"
}

setup_agents_symlink() {
    local source="{{ .chezmoi.homeDir }}/repositories/auricom/agents/.agent"
    local target="{{ .chezmoi.homeDir }}/.agent"

    create_symlink_if_missing "$source" "$target"
}

setup_claude_skills() {
    local source="{{ .chezmoi.homeDir }}/repositories/auricom/agents/.agent/skills"
    local target="{{ .chezmoi.homeDir }}/.claude/skills"

    create_symlink_if_missing "$source" "$target"
}

setup_claude_md() {
    local source="{{ .chezmoi.homeDir }}/repositories/auricom/agents/AGENTS.md"
    local target="{{ .chezmoi.homeDir }}/.claude/CLAUDE.md"

    create_symlink_if_missing "$source" "$target"
}

# Run main function
main "$@"
{{- end -}}
