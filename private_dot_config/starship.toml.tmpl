[custom.since_last_commit]
command = """$HOME/.local/bin/relative-time-commit"""
description = "Show time since last commit"
directories = [".git"]
format = "[ó°š° $output]($style) "
shell = ["bash", "--norc", "--noprofile"]
style = "mauve"
when = 'git rev-parse --is-inside-work-tree 2> /dev/null'

[custom.git_host]
command = """$HOME/.local/bin/github-icon"""
description = "Show icon of git host platform"
directories = [".git"]
format = "[$output]($style) "
shell = ["bash", "--norc", "--noprofile"]
style = "white"
when = 'git rev-parse --is-inside-work-tree 2> /dev/null'

[custom.dir]
command = """$HOME/.local/bin/fishfy-path"""
description = "Custom directory"
format = "[$output]($style) "
shell = ["bash", "--norc", "--noprofile"]
style = "blue"
when = 'true'
