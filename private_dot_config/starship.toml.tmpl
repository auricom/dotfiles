"$schema" = 'https://starship.rs/config-schema.json'

add_newline = true

format = """\
  $status\
  $username\
  $hostname\
  ${custom.git_host}\
  $directory\
  $git_branch\
  $fill\
  ${custom.since_last_commit}\
  $git_state\
  $git_metrics\
  $git_status\
  $git_commit\
  $cmd_duration\
  $character\
  """

