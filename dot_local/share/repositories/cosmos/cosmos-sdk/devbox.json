{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "nodejs@latest",
    "rustup@latest",
    "libiconv@latest",
    "go@latest",
    "go-task@latest",
    "jq@latest"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true",
    "GOPATH":                  "/var/home/claude/repositories/cosmos/cosmos-sdk/build"
  },
  "shell": {
    "init_hook": [
      "task init"
    ],
    "scripts": {
      "test":       "cargo test -- --show-output",
      "start":      "cargo run",
      "build-docs": "cargo doc"
    }
  }
}
